<h1>{{title}}</h1>
<br>
<select name="formation" id="form">
    {{#compare formation null operator='isEmptyTab'}}
        <option value="rien">la base de donnée est vide</option>
    {{else}}
        <option value ="0">sélectionné une formation</option>
        {{#each formation}}
            <option value="{{this._id}}">{{this.libelle}}</option>
        {{/each}}
    {{/compare}}
</select>

<script>
    var frm = document.getElementById('form');
    frm.addEventListener('change', function(evt){
        window.location = "/detform/"+frm.value;
    });
</script>